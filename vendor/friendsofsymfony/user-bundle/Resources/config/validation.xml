        <property name="mobile">

            <constraint name="NotBlank">
                <option name="message">لطفا شماره تماس را وارد کنید</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>

            <constraint name="Type">
                <option name="type">numeric</option>
