                <option name="groups">
                    <value>karjooSkill</value>
                </option>
            </constraint>
        </property>


    </class>

    <class name="am\UserBundle\Entity\Karjoo">


        <property name="file">
            <constraint name="Image">
                <option name="maxSize">5M</option>
                <option name="mimeTypes">
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                    <value>image/png</value>
                </option>
                <option name="mimeTypesMessage">لطفا فرمت مناسبی را برای عکس انتخاب کنید</option>
                <option name="maxSizeMessage">سایز عکس بیش از ۵ مگابایت است</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

        <property name="resumeFile">
            <constraint name="File">
                <option name="maxSize">5M</option>
                <option name="mimeTypes">
                    <value>application/pdf</value>
                </option>
                <option name="mimeTypesMessage">لطفا فرمت pdf را برای رزومه انتخاب کنید</option>
                <option name="maxSizeMessage">سایز رزومه بیش از ۵ مگابایت است</option>
                <option name="groups">
                    <value>Registration</value>
                    <value>Profile</value>
                </option>
            </constraint>
        </property>

    </class>

