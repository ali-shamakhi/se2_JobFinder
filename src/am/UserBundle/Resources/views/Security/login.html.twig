
    {% if error %}
        <div><span class="fa fa-exclamation-triangle" style="margin-left:3px; color:red;"></span>
            <span style="color:red;">نام کاربری یا کلمه عبور وارد شده معتبر نمی باشد!</span>
        </div>
    {% endif %}

<form action="{{ path("fos_user_security_check") }}" id="mzForm" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
<div class="modal-content">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">ورود به پنل کاربری</h4>
    </div>
    <div class="modal-body">
        <div id="error-msg" class="error">

        </div>
        <div class="form-group">
            <label>نام کاربری</label>
            <input name="_username" type="text" class="form-control"  value="{{ last_username }}" required="required" placeholder="نام کاربری خود را وارد نمایید">
        </div>
        <div class="form-group">
            <label >رمز عبور</label>
            <input name="_password" type="password" class="form-control" required="required" placeholder="رمز عبور خود را وارد نمایید">
        </div>
    <div class="form-group">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">مرا به خاطر بسپار</label>
    </div>
    <a href="{{ path('fos_user_resetting_request') }}">بازیابی رمز عبور</a>
    </div>

    <div class="modal-footer">
        <button type="submit" name="_submit" class="btn btn-success">ورود به پنل کاربری</button>
    </div>

</div>
    </form>
    <script>
        $(document).on('submit','#mzForm',function (e) {
            e.preventDefault();
            var dataTosend = $("#mzForm").serialize();
            console.log(dataTosend);
            $.post("{{ path("fos_user_security_check") }}", dataTosend, function (res) {
                if(res.success){
                    location.href = "{{ path('am_karyab_dashboard') }}";
                }
                $("#error-msg").html(res.message);
            });

            return false;
        })
    </script>
