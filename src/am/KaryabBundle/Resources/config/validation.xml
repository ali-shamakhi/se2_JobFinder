<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">
    <class name="am\KaryabBundle\Entity\Advertise">
        <property name="brochureFile">
            <constraint name="File">
                <option name="maxSize">5M</option>
                <option name="mimeTypes">
                    <value>image/jpg</value>
                    <value>image/jpeg</value>
                    <value>image/png</value>
                    <value>application/pdf</value>
                </option>
                <option name="mimeTypesMessage">لطفا فرمت مناسبی را برای فایل انتخاب کنید</option>
                <option name="maxSizeMessage">سایز فایل بیش از ۵ مگابایت است</option>
            </constraint>
        </property>
        <property name="skillTags">
            <constraint name="Count">
                <option name="min">1</option>
                <option name="minMessage">ورود حداقل یک مهارت الزامی است</option>
            </constraint>
        </property>
    </class>
</constraint-mapping>