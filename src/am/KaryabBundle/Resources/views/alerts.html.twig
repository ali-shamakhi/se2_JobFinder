{% extends '@amUser/layout.html.twig' %}
{% block user_content %}
<link rel="stylesheet" href="{{ asset('am_template/css1.css') }}">
    <link rel="stylesheet" href="{{ asset('am_template/NewCss.css') }}">
    <div class="col-md-12" style="margin-top:250px;">
        <div class="col-md-3"></div>
        <div class="col-md-6" style="background-color: #00C853;padding: 10px;font-family: IRANSansWeb,monospace;direction: rtl;border-radius: 5px;box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.30);">
            <i class="fa fa-spinner fa-spin fa-2x fa-fw" style="float:left"></i>
            <div style="font-size:13pt;">
                {% if message is not defined %}
                    تغییرات با موفقیت ذخیره گردید!
                {% else %}
                    {{ message }}
                    {% endif %}
            </div>
            <script>
                var timer = setTimeout(function() {
                    window.location='{% if targetUrl is not defined %}{{ path('am_karyab_dashboard') }}{% else %}{{ targetUrl }}{% endif %}'
                }, 3000);
            </script>
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}