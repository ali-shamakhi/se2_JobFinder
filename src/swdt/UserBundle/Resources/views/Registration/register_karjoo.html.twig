{% trans_default_domain 'FOSUserBundle' %}
{% extends "@swdtUser/layout.html.twig" %}
{% block user_content %}
    <script src='https://www.google.com/recaptcha/api.js?hl=fa'></script>
    <script src="{{ asset('swdt_template/js/flowtype.js') }}"></script>
    <div class="container-fluid register-karjoo-parent">
        <div class="row">
            <div class="col-md-1 col-lg-2"></div>
            <div class="container-fluid col-md-10 col-lg-8 register-karjoo">
                <h1 style="text-align: center;margin-bottom: 45px">عضویت در سامانه کاریاب به عنوان کارجو</h1>
                {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register_karjoo')}) }}
                {% if form.vars.errors %}
                    <div class="errorBox">{{ form_errors(form) }}</div>
                {% endif %}
                <div class="row">
                    <div class="col-sm-6 exception-sm">
                        <div class="col-sm-12">
                            <h3>اطلاعات شخصی</h3>
                        </div>
                        <div class="col-sm-12">
                            <label for="first_name" class="title-label">*نام</label>
                            {{ form_widget(form.fName,{attr: {'class':'form-control'}}) }}
                        </div>
                        <div class="col-sm-12">
                            <label for="last_name" class="title-label">*نام خانوادگی</label>
                            {{ form_widget(form.lName,{attr: {'class':'form-control'}}) }}
                        </div>
                        <div class="col-sm-12">
                            <label class="title-label">جنسیت</label><br>
                            {{ form_widget(form.gender) }}
                            {{ form_errors(form.gender) }}
                        </div>
                        <div class="col-sm-12 soldier">
                            <label class="title-label">*وضعیت سربازی</label><br>
                            {{ form_widget(form.karjoo.soldiering) }}
                            {{ form_errors(form.karjoo.soldiering) }}
                        </div>
                        <div class="col-sm-12">
                            <label for="birth_year" class="title-label">سال تولد</label>
                            {{ form_widget(form.birth_year,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.birth_year) }}
                        </div>
                        <div class="col-sm-12">
                            <label for="company_name" class="title-label">*کدملی</label>
                            {{ form_widget(form.karjoo.national_id,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.national_id) }}
                        </div>
                        <div class="col-sm-12">
                            <label for="phone" class="title-label">*شماره تماس ثبت نام کننده</label>
                            {{ form_widget(form.mobile,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.mobile) }}
                        </div>
                        <div class="col-sm-12">
                            <label for="mail" class="title-label">*پست الکترونیک ثبت نام کننده</label>
                            {{ form_widget(form.email,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="col-sm-12 col-karjoo-sm">
                            <h3>شرایط و ضوابط سامانه کاریاب</h3>
                        </div>
                        <div class="col-sm-12 col-karjoo-sm">
                            <textarea style="resize: none;overflow: auto" class="form-control" rows="4" disabled id="#">سایت کاریاب صرفا به عنوان محل اتصال کارفرمایان و کارجویان عمل می کند و به کارفرمایان اجازه می دهد پروژه ها و شغل های خود را  به صورت آگهی ثبت کنند . سایت کاریاب همچنین امکان مشاهده آگهی های مرتبط و درخواست همکاری برای یک آگهی را برای کارجویان فراهم آورده است . وبسایت کاریاب خود را درگیر جزئیات فرصت های شغلی نمی کند. بنابراین سایت کاریاب هیچ گونه مسئولیتی در قبال آگهی های ارسال شده و همچنین کارآمد بودن کارجو ها با توجه به اطلاعات وارده از جانب آن ها ندارد و تضمینی بابت رعایت موارد بالا از جانب کارفرمایان و کارجویان نمیدهد .
                            </textarea>
                        </div>
                        <div class="col-sm-12 col-karjoo-sm" style="direction: ltr;text-align: right">
                            <div class="checkbox">
                                <label style="color: white"><input id="condition" type="checkbox">شرایط و ضوابط سامانه کاریاب را به طور کامل مطالعه کرده و قبول دارم</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6 exception-sm">
                        <div class="col-sm-12">
                            <h3>اطلاعات حساب</h3>
                        </div>
                        <div class="col-sm-12">
                            <label for="user_name" class="title-label">*شناسه کاربری</label>
                            {{ form_widget(form.username,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.username) }}
                        </div>
                        {% for f in form.plainPassword %}
                            <div class="col-sm-12">
                                <label for="username" class="title-label">*{{ form_label(f) }}</label>
                                {{ form_widget(f,{attr: {'class': 'form-control'}}) }}
                                {{ form_errors(f) }}
                            </div>
                        {% endfor %}
                        <div class="col-sm-12">
                            <h3>اطلاعات دانشگاهی</h3>
                        </div>
                        <div class="col-sm-12">
                            <label class="title-label">آیا دانشجو هستید؟</label>
                            {{ form_widget(form.karjoo.is_student,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.is_student) }}
                        </div>
                        <div id="student_id" class="col-sm-12">
                            <label class="title-label">شماره دانشجویی</label>
                            {{ form_widget(form.karjoo.student_id,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.student_id) }}
                        </div>
                        <div id="current_university" class="col-sm-12">
                            <label class="title-label">دانشگاه فعلی</label>
                            {{ form_widget(form.karjoo.current_university,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.current_university) }}
                        </div>
                        <div id="current_field" class="col-sm-12">
                            <label class="title-label">رشته تحصیلی فعلی</label>
                            {{ form_widget(form.karjoo.current_field,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.current_field) }}
                        </div>
                        <div class="col-sm-12">
                            <label class="title-label">آخرین مقطع تحصیلی</label><br>
                            {{ form_widget(form.karjoo.grade) }}
                            {{ form_errors(form.karjoo.grade) }}
                        </div>
                        <div id="phd_univesity" class="col-sm-12">
                            <label class="title-label">دانشگاه دکتری</label>
                            {{ form_widget(form.karjoo.phd_univesity,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.phd_univesity) }}
                        </div>
                        <div id="phd_field" class="col-sm-12">
                            <label class="title-label">رشته تحصیلی دکتری</label>
                            {{ form_widget(form.karjoo.phd_field,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.phd_field) }}
                        </div>
                        <div id="fogh_licanse_univesity" class="col-sm-12">
                            <label class="title-label">دانشگاه فوق لیسانس</label><br>
                            {{ form_widget(form.karjoo.fogh_licanse_univesity,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.fogh_licanse_univesity) }}
                        </div>
                        <div id="fogh_licanse_field" class="col-sm-12">
                            <label class="title-label">رشته تحصیلی فوق لیسانس</label>
                            {{ form_widget(form.karjoo.fogh_licanse_field,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.fogh_licanse_field) }}
                        </div>
                        <div id="licanse_univesity" class="col-sm-12">
                            <label class="title-label">دانشگاه لیسانس</label>
                            {{ form_widget(form.karjoo.licanse_univesity,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.licanse_univesity) }}
                        </div>
                        <div id="licanse_field" class="col-sm-12">
                            <label class="title-label">رشته تحصیلی لیسانس</label><br>
                            {{ form_widget(form.karjoo.licanse_field,{attr: {'class':'form-control'}}) }}
                            {{ form_errors(form.karjoo.licanse_field) }}
                        </div>
                        <div class="col-sm-12 col-karjoo-xs">
                            <h3>شرایط و ضوابط سامانه کاریاب</h3>
                        </div>
                        <div class="col-sm-12 col-karjoo-xs">
                            <textarea style="resize: none;overflow: auto" class="form-control" rows="4" disabled id="#">سایت کاریاب صرفا به عنوان محل اتصال کارفرمایان و کارجویان عمل می کند و به کارفرمایان اجازه می دهد پروژه ها و شغل های خود را  به صورت آگهی ثبت کنند . سایت کاریاب همچنین امکان مشاهده آگهی های مرتبط و درخواست همکاری برای یک آگهی را برای کارجویان فراهم آورده است . وبسایت کاریاب خود را درگیر جزئیات فرصت های شغلی نمی کند. بنابراین سایت کاریاب هیچ گونه مسئولیتی در قبال آگهی های ارسال شده و همچنین کارآمد بودن کارجو ها با توجه به اطلاعات وارده از جانب آن ها ندارد و تضمینی بابت رعایت موارد بالا از جانب کارفرمایان و کارجویان نمیدهد .
                            </textarea>
                        </div>
                        <div class="col-sm-12 col-karjoo-xs" style="direction: ltr;text-align: right">
                            <div class="checkbox">
                                <label style="color: white"><input id="condition" type="checkbox">شرایط و ضوابط سامانه کاریاب را به طور کامل مطالعه کرده و قبول دارم</label>
                            </div>
                        </div>
                        <div class="col-sm-12">
                            <label class="title-label">سوال امنیتی</label>
                            <div class="g-recaptcha" data-sitekey="6LcxKwkUAAAAALKxy9mDPS9D1wZXJAh_8P9yGHJs" data-theme="clean"></div>
                        </div>
                    </div>
                </div>
                <div class="row" style="margin: 40px 0">
                    <div class="col-sm-12" style="text-align: center">
                        <button id="checkedButton" disabled type="submit" style="padding-left:50px;padding-right:50px;" class="btn btn-success">ثبت نام</button>
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
            <div class="col-md-1 col-lg-2"></div>
        </div>
    </div>
    <script>
        $(document).ready(function(){
            var temp = 0;
            $("select[name='swdt_user_registration[gender]']").change(function () {
                var selectValue = $("select[name='swdt_user_registration[gender]']").val();
                if (selectValue == "1") {
                    $(".register-karjoo .soldier").css("display", "block");
                }
                if (selectValue == "2") {
                    $(".register-karjoo .soldier").css("display", "none");
                }
            });
            $('#swdt_user_registration_karjoo_is_student').change(function () {
                var selectValue = $("select[name='swdt_user_registration[karjoo][is_student]']").val();
                if (selectValue == "0") {
                    temp = 0;
                    $(".register-karjoo #student_id").css("display", "none");
                    $(".register-karjoo #current_field").css("display", "none");
                    $(".register-karjoo #current_university").css("display", "none");
                }
                if (selectValue == "1") {
                    temp = 1;
                    $(".register-karjoo #student_id").css("display", "block");
                    $(".register-karjoo #current_field").css("display", "block");
                    $(".register-karjoo #current_university").css("display", "block");
                }
            });
            $('#swdt_user_registration_karjoo_grade').change(function () {
                var selectValue = $("select[name='swdt_user_registration[karjoo][grade]']").val();
                if (selectValue == "1") {
                    if (temp == "0"){
                        $(".register-karjoo #phd_univesity").css("display", "block");
                        $(".register-karjoo #phd_field").css("display", "block");
                    }
                    $(".register-karjoo #fogh_licanse_univesity").css("display", "block");
                    $(".register-karjoo #fogh_licanse_field").css("display", "block");
                    $(".register-karjoo #licanse_univesity").css("display", "block");
                    $(".register-karjoo #licanse_field").css("display", "block");
                }
                if (selectValue == "2") {
                    $(".register-karjoo #fogh_licanse_univesity").css("display", "none");
                    $(".register-karjoo #fogh_licanse_field").css("display", "none");
                    if (temp == "0"){
                        $(".register-karjoo #fogh_licanse_univesity").css("display", "block");
                        $(".register-karjoo #fogh_licanse_field").css("display", "block");
                    }
                    $(".register-karjoo #licanse_univesity").css("display", "block");
                    $(".register-karjoo #licanse_field").css("display", "block");
                    $(".register-karjoo #phd_univesity").css("display", "none");
                    $(".register-karjoo #phd_field").css("display", "none");
                }
                if (selectValue == "3") {
                    $(".register-karjoo #licanse_univesity").css("display", "none");
                    $(".register-karjoo #licanse_field").css("display", "none");
                    if (temp == "0"){
                        $(".register-karjoo #licanse_univesity").css("display", "block");
                        $(".register-karjoo #licanse_field").css("display", "block");
                    }
                    $(".register-karjoo #phd_univesity").css("display", "none");
                    $(".register-karjoo #phd_field").css("display", "none");
                    $(".register-karjoo #fogh_licanse_univesity").css("display", "none");
                    $(".register-karjoo #fogh_licanse_field").css("display", "none");
                }
                if (selectValue == "4") {
                    $(".register-karjoo #licanse_univesity").css("display", "none");
                    $(".register-karjoo #licanse_field").css("display", "none");
                    $(".register-karjoo #fogh_licanse_univesity").css("display", "none");
                    $(".register-karjoo #fogh_licanse_field").css("display", "none");
                    $(".register-karjoo #phd_univesity").css("display", "none");
                    $(".register-karjoo #phd_field").css("display", "none");
                }
                if (selectValue == "5") {
                    $(".register-karjoo #licanse_univesity").css("display", "none");
                    $(".register-karjoo #licanse_field").css("display", "none");
                    $(".register-karjoo #fogh_licanse_univesity").css("display", "none");
                    $(".register-karjoo #fogh_licanse_field").css("display", "none");
                    $(".register-karjoo #phd_univesity").css("display", "none");
                    $(".register-karjoo #phd_field").css("display", "none");
                }
                if (selectValue == "6") {
                    $(".register-karjoo #licanse_univesity").css("display", "none");
                    $(".register-karjoo #licanse_field").css("display", "none");
                    $(".register-karjoo #fogh_licanse_univesity").css("display", "none");
                    $(".register-karjoo #fogh_licanse_field").css("display", "none");
                    $(".register-karjoo #phd_univesity").css("display", "none");
                    $(".register-karjoo #phd_field").css("display", "none");
                }
            });
        });
    </script>
    <script>
        $(document).ready(function () {
            var temp = $("#checkedButton");
            $("#condition").change(function () {
                if($(this).prop("checked") == true){
                    temp.removeAttr("disabled");
                }
                else if($(this).prop("checked") == false){
                    temp.attr("disabled","disabled");
                }
            });
        });
    </script>
    <script>
        $('body').flowtype({
            minimum   : 310,
            maximum   : 3900,
            minFont   : 12,
            maxFont   : 30,
            fontRatio : 100
        });
        $('h1').flowtype({
            minimum   : 310,
            maximum   : 3900,
            minFont   : 14,
            maxFont   : 50,
            fontRatio : 19
        });
        $('h3').flowtype({
            minimum   : 310,
            maximum   : 3900,
            minFont   : 10,
            maxFont   : 45,
            fontRatio : 23
        });
    </script>
{% endblock user_content %}
